generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model User {
  id        String   @id @default(cuid())
  username  String   @unique
  password  String
  updatedAt DateTime @updatedAt
  createdAt DateTime @default(now())

  session Session[]
}

model Session {
  id        String   @id
  userId    String
  expiresAt DateTime
  user      User     @relation(fields: [userId], references: [id])
}

model Companies {
  id        Int      @id
  company   String
  addresses String
  telephone String
  updatedAt DateTime @updatedAt
  createdAt DateTime @default(now())
}

model Agents {
  id        Int    @id
  name      String
  addresses String
  city      String
  phone     String
  fax       String

  updatedAt DateTime @updatedAt
  createdAt DateTime @default(now())
}

model Allocations {
  id             Int      @id
  deliveryNumber String
  materialName   String
  giDate         String
  bpeNumber      String
  period         String
  alocatedQty    Int
  status         String
  updatedAt      DateTime @updatedAt
  createdAt      DateTime @default(now())
}

model lpgDistributions {
  id                Int      @id
  transactionNumber String
  date              DateTime
  agentName         BigInt
  licensePlate      String
  doNumber          String
  allocatedQty      Int
  qty               Int
  volume            Decimal
  updatedAt         DateTime @updatedAt
  createdAt         DateTime @default(now())
}
